# NSAI Data Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="NSAI Data"
APP_VERSION="1.0.0"
ENVIRONMENT="production"
DEBUG=false
LOG_LEVEL="INFO"
SECRET_KEY="your-secret-key-change-this-in-production"
API_KEY_SALT="your-api-key-salt-change-this"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=false

# CORS Settings
CORS_ORIGINS="https://nsaidata.com,https://app.nsaidata.com"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"

# Database Configuration
DATABASE_URL="postgresql://nsaidata:nsaidata_secure_password@postgres:5432/nsaidata"
POSTGRES_PASSWORD="nsaidata_secure_password"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL="redis://redis:6379/0"
REDIS_PREFIX="nsai:"
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096
OPENAI_TIMEOUT=120

# Firecrawl Configuration (Optional)
FIRECRAWL_API_KEY="your-firecrawl-api-key-here"
FIRECRAWL_BASE_URL="https://api.firecrawl.dev"

# Stripe Configuration (Optional)
STRIPE_API_KEY="your-stripe-api-key-here"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"
STRIPE_PRICE_ID="price_1234567890"

# SendGrid Configuration (Optional)
SENDGRID_API_KEY="your-sendgrid-api-key-here"
SENDGRID_FROM_EMAIL="noreply@nsaidata.com"
SENDGRID_FROM_NAME="NSAI Data"

# Security Settings
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD="admin"

# Plugin System
PLUGIN_DIRECTORY="/app/plugins"
WASI_RUNTIME_ENABLED=false

# External Services
SENTRY_DSN=""
SLACK_WEBHOOK=""

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_BILLING=false
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Agent Configuration
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT_SECONDS=60
MAX_CONCURRENT_AGENTS=6
WEB_SEARCH_MAX_RESULTS=10
CONTENT_EXTRACTION_TIMEOUT=30

# Research Limits
MAX_SOURCES_PER_QUERY=50
MAX_QUERY_LENGTH=5000
MAX_REPORT_LENGTH=50000
RESEARCH_TIMEOUT_SECONDS=300

# File Storage
UPLOAD_MAX_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=".pdf,.txt,.doc,.docx,.md,.html"
STORAGE_PATH="/app/data"

# SSL/TLS
SSL_CERT_PATH="/etc/nginx/ssl/cert.pem"
SSL_KEY_PATH="/etc/nginx/ssl/key.pem"
FORCE_HTTPS=true

# CDN Configuration
CDN_URL=""
STATIC_ASSETS_PATH="/app/frontend"

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=""
BACKUP_S3_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""