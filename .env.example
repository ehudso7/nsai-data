# NSAI Data Environment Variables Example
# Copy this file to .env.local for development

# API Configuration
NEXT_PUBLIC_API_URL=https://api.nsaidata.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEMO_MODE=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Public Keys (safe to expose)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-YOUR_ID_HERE
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_DSN@sentry.io/YOUR_PROJECT

# Private Keys (NEVER expose these)
# These are only used server-side

# AI Service Configuration
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE
OPENAI_MODEL=gpt-4o
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_KEY_HERE

# Payment Processing
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE

# Database
DATABASE_URL=postgresql://localhost/nsai_data

# Authentication
JWT_SECRET=your-secret-key-here
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Sentry Configuration
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# Email Configuration
SENDGRID_API_KEY=SG.YOUR_KEY_HERE
EMAIL_FROM=noreply@nsaidata.com

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Supabase Configuration (optional)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key